{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./core/components/*"],
      "@/modules/*": ["./core/components/modules/*"],
      "@/elements/*": ["./core/components/elements/*"],
      "@/templates/*": ["./core/components/templates/*"],
      "@/layout/*": ["./core/components/layout/*"],
      "@/ui/*": ["./core/components/ui/*"],
      "@/helper/*": ["./core/helper/*"],
      "@/lib/*": ["./core/lib/*"],
      "@/types/*": ["./core/types/*"],
      "@/hooks/*": ["./core/hooks/*"],
      "@/styles/*": ["./core/styles/*"],
      "@/store/*": ["./core/store/*"],
      "@/api/*": ["./core/api/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
